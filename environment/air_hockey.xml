<mujoco model="air_hockey">
    <compiler angle="radian" />
    <option timestep="0.003" gravity="0 0 -9.81" solver="Newton" iterations="150" tolerance="1e-8" viscosity="0.1" />
    <worldbody>
        <!--airhockey table and walls -->
        <geom name="table" type="plane" pos="0 0 0" size="1.2 0.6 0.01" rgba="0.5 0.56 0.5 1" friction="0.4 0.4 0.4" solimp="0.99 0.99 0.002" />

        <!--First attempt at real life dimensions, dimensions: 2.4m x 1.2m -->
        <geom name="wall_left" type="box" pos="-1.15 0 0.06" size="0.05 0.55 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001" />
        <geom name="wall_right" type="box" pos="1.15 0 0.06" size="0.05 0.55 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001" />
        <geom name="wall_top" type="box" pos="0 0.55 0.06" size="1.15 0.05 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001" />
        <geom name="wall_bottom" type="box" pos="0 -0.55 0.06" size="1.15 0.05 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001" />

        <!-- the edges of the table -->
        <geom name="corner_topleft" type="cylinder" pos="-1.1 0.5 0.06" size="0.05 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001"/>
        <geom name="corner_topright" type="cylinder" pos="1.1 0.5 0.06" size="0.05 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001"/>
        <geom name="corner_bottomleft" type="cylinder" pos="-1.1 -0.5 0.06" size="0.05 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001"/>
        <geom name="corner_bottomright" type="cylinder" pos="1.1 -0.5 0.06" size="0.05 0.06" rgba="1 0 0 0.5" friction="0.6 0.6 0" solimp="0.99 0.99 0.001"/>

        <!-- Scoring area/goal when puck hits it-->
        <geom name="goal_left" type="box" pos="-1.1 0 0.06" size="0.03 0.1 0.05" rgba="1 0 0 0.3" condim="3" friction="1 1 0" />
        <geom name="goal_right" type="box" pos="1.1 0 0.06" size="0.03 0.1 0.05" rgba="0 0 1 0.3" condim="3" friction="1 1 0" />

        <!--Puck-->
        <body name="puck" pos="0 0 0.02">
            <geom type="cylinder" size="0.035 0.005" mass="0.1" rgba="1 1 1 1" density="1.0" condim="3" friction="0.2 0.2 0.2" solref="0.01 1" solimp="0.2 0.2 0.002" />
            <joint name="puck_joint" type="free" damping="0.1" />
        </body>

        <!--Paddle 1(red)-->
        <body name="paddle1" pos="-0.8 0 0.01">
            <geom type="cylinder" size="0.05 0.01" mass="0.25" rgba="1 0 0 1" density="1.5" condim="3" friction="0.9 0.9 0.002" solref="0.01 1" solimp="0.98 0.98 0.002" />
            <joint name="paddle1_joint" type="slide" axis="1 0 0" damping="0.2" />
            <joint name="paddle1_joint_y" type="slide" axis="0 1 0" damping="0.2" />
        </body>

        <!-- Paddle 2(blue)-->
        <body name="paddle2" pos="0.8 0 0.01">
            <geom type="cylinder" size="0.05 0.01" mass="0.25" rgba="0 0 1 1" density="1.5" condim="3" friction="0.9 0.9 0.002" solref="0.01 1" solimp="0.98 0.98 0.002" />
            <joint name="paddle2_joint" type="free" damping="0.1" />
        </body>
    </worldbody>
    <actuator>
        <motor name="paddle1_actuator_x" joint="paddle1_joint_y" gear="100" />
        <motor name="paddle1_actuator_y" joint="paddle1_joint" gear="100" />
        <motor name="paddle2_actuator_x" joint="paddle2_joint" gear="100" />
        <motor name="paddle2_actuator_y" joint="paddle2_joint" gear="100" />
    </actuator>
</mujoco>
